{
  "_comment": "Configuration template for EmailReader application",
  "_comment2": "Copy this file to config.dev.json or config.prod.json and fill in your values",

  "environment": "development or production",
  "use_pinecone": true,

  "app": {
    "program": "translator or default_mode",
    "translator_url": "http://localhost:8000/submit",
    "translator_executable_path": "/path/to/translator/script.py"
  },

  "google_drive": {
    "parent_folder_id": "YOUR_GOOGLE_DRIVE_PARENT_FOLDER_ID",
    "service_account": {
      "type": "service_account",
      "universe_domain": "googleapis.com",
      "project_id": "YOUR_PROJECT_ID",
      "private_key_id": "YOUR_PRIVATE_KEY_ID",
      "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n",
      "client_email": "YOUR_SERVICE_ACCOUNT_EMAIL@project.iam.gserviceaccount.com",
      "client_id": "YOUR_CLIENT_ID",
      "auth_uri": "https://accounts.google.com/o/oauth2/auth",
      "token_uri": "https://oauth2.googleapis.com/token",
      "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
      "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/YOUR_SERVICE_ACCOUNT_EMAIL"
    }
  },

  "email": {
    "username": "YOUR_EMAIL@example.com",
    "password": "YOUR_EMAIL_PASSWORD_OR_APP_PASSWORD",
    "initial_folder": "INBOX",
    "imap_server": "imap.example.com",
    "date_file": "data/last_finish_time.txt",
    "start_date": "2020-01-01 00:00:00 -0800"
  },

  "flowise": {
    "api_url": "http://YOUR_FLOWISE_HOST:PORT/api/v1",
    "api_key": "YOUR_FLOWISE_API_KEY",
    "chatflow_id": "YOUR_CHATFLOW_ID",
    "doc_store_id": "YOUR_DOC_STORE_ID",
    "doc_loader_docx_id": "YOUR_DOC_LOADER_ID"
  },

  "pinecone": {
    "api_key": "YOUR_PINECONE_API_KEY"
  },

  "scheduling": {
    "google_drive_interval_minutes": 15,
    "email_interval_minutes": 5
  },

  "storage": {
    "documents_folder": "documents"
  },

  "processing": {
    "test_mode": false,
    "_test_mode_comment": "When true, uses test version that doesn't remove files from Inbox",
    "remove_from_inbox": true,
    "_remove_comment": "Only applies when test_mode is false",
    "track_processed_method": "metadata",
    "_track_method_comment": "Options: 'metadata' (file properties), 'database' (local SQLite)"
  },

  "metrics": {
    "enabled": true,
    "output_directory": "metrics",
    "upload_to_drive": false,
    "_metrics_comment": "Collect processing metrics for quality analysis"
  },

  "quality": {
    "validation_enabled": true,
    "font_size_thresholds": {
      "min": 7.0,
      "max": 48.0,
      "body_text_range": [10.0, 13.0],
      "heading_range": [13.0, 24.0],
      "title_range": [24.0, 48.0]
    },
    "calibration_factor": 400.0,
    "_calibration_comment": "Font size calibration factor (verified optimal: 400)"
  },

  "ocr": {
    "provider": "default",
    "_provider_comment": "Options: 'default' (Tesseract), 'landing_ai'",
    "landing_ai": {
      "api_key": "YOUR_LANDING_AI_API_KEY",
      "base_url": "https://api.va.landing.ai/v1",
      "model": "dpt-2-latest",
      "split_mode": "page",
      "preserve_layout": true,
      "chunk_processing": {
        "use_grounding": true,
        "maintain_positions": true
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2,
        "timeout": 30
      }
    },
    "enable_ab_test": false,
    "ab_test_percentage": 10,
    "_ab_test_comment": "When enabled, randomly route X% of requests to LandingAI for comparison"
  }
}
